  "scripts": {
    "dev": "webpack --progress --hide-modules",
    "watch": "webpack --watch --progress --hide-modules",
    "prod": "NODE_ENV=production webpack --no-progress --hide-modules",
    "federalist": "npm run prod",
    "postinstall": "npm run update-uswds",
    "update-uswds": "npm run update-uswds-fonts && npm run update-uswds-img",
    "update-uswds-fonts": "rsync -avr --delete node_modules/uswds/dist/fonts/ assets/fonts/",
    "update-uswds-img": "rsync -avr --delete node_modules/uswds/dist/img/ assets/img/"
  },
  "dependencies": {
    "uswds": "uswds/uswds#release-2.0",
    "webpack": "^3.8.1"
  }
}
